{
  "name": "loredrop-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install-all": "pnpm -w install",
    "dev": "pnpm -w --parallel --filter frontend dev --filter backend dev",
    "start:frontend": "pnpm --filter frontend --workspace-root run dev",
    "start:backend": "pnpm --filter backend --workspace-root run dev",
    "build": "pnpm -w -r run build"
  }
}
